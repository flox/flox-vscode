{
  "name": "flox",
  "displayName": "Flox",
  "description": "Flox integration for VSCode editor ",
  "version": "1.0.0",
  "preview": true,
  "icon": "assets/icon.png",
  "author": "Flox <hello@floxdev.com>",
  "maintainers": [
    {
      "name": "Flox team",
      "url": "https://github.com/flox/flox"
    }
  ],
  "publisher": "flox",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/flox/flox-vscode"
  },
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "*",
    "onLanguage"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": false,
      "description": "Flox can run arbitrary shell code"
    }
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "flox",
          "title": "Flox",
          "icon": "out/assets/icon.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "floxSearchView",
        "contents": "Welcome to Flox!"
      },
      {
        "view": "floxSearchView",
        "contents": "We couldn't find any Flox environment.\n[Create environment](command:flox.init)",
        "when": "!flox.envExists"
      },
      {
        "view": "floxSearchView",
        "contents": "Missing something? Find and install a package.\n[Search](command:flox.search)",
        "when": "flox.envExists"
      },
      {
        "view": "floxSearchView",
        "contents": "We noticed your Flox environment is not active. Do you wish to activate it?\n[Activate](command:flox.activate)",
        "when": "flox.envExists && !flox.envActive"
      }
    ],
    "views": {
      "flox": [
        {
          "id": "floxSearchView",
          "name": "Search & Install packages"
        },
        {
          "id": "floxInstallView",
          "name": "Installed Packages",
          "when": "flox.envExists && flox.hasPkgs"
        },
        {
          "id": "floxVarsView",
          "name": "Variables",
          "when": "flox.envExists && flox.hasVars"
        },
        {
          "id": "floxServicesView",
          "name": "Services",
          "when": "flox.envExists && flox.hasServices"
        },
        {
          "id": "floxHelpView",
          "type": "webview",
          "name": "Help & Docs"
        }
      ]
    },
    "commands": [
      {
        "command": "flox.init",
        "category": "Flox",
        "title": "Create new environment"
      },
      {
        "command": "flox.version",
        "category": "Flox",
        "title": "Show version"
      },
      {
        "command": "flox.activate",
        "category": "Flox",
        "title": "Activate environment"
      },
      {
        "command": "flox.install",
        "category": "Flox",
        "title": "Install a package"
      },
      {
        "command": "flox.uninstall",
        "category": "Flox",
        "icon": "$(trash)",
        "title": "Uninstall a package"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "flox.init",
          "when": "flox.envExists == false"
        },
        {
          "command": "flox.version",
          "group": "commandPalette"
        },
        {
          "command": "flox.activate",
          "when": "flox.envExists == true",
          "group": "commandPalette"
        }
      ],
      "view/item/context": [
        {
          "command": "flox.uninstall",
          "group": "inline",
          "when": "view == floxInstallView && viewItem == package"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "package": "vsce package --allow-star-activation",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.1",
    "eslint": "^9.17.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "smol-toml": "^1.3.1"
  }
}
