{
  "name": "flox",
  "displayName": "Flox",
  "description": "Flox integration for VSCode editor ",
  "version": "1.0.0",
  "preview": true,
  "icon": "assets/icon.png",
  "author": "Flox <hello@floxdev.com>",
  "maintainers": [
    {
      "name": "Flox team",
      "url": "https://github.com/flox/flox"
    }
  ],
  "publisher": "flox",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/flox/flox-vscode"
  },
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "*",
    "onLanguage"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": false,
      "description": "Flox can run arbitrary shell code"
    }
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "flox",
          "title": "Flox",
          "icon": "out/assets/icon.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "floxInfoView",
        "contents": "Welcome to Flox!"
      },
      {
        "view": "floxInfoView",
        "contents": "We couldn't find any Flox environment.\n[Create environment](command:flox.init)",
        "when": "!flox.envExists"
      },
      {
        "view": "floxInfoView",
        "contents": "We noticed your Flox environment is not active. Do you wish to activate it?\n[Activate](command:flox.activate)",
        "when": "flox.envExists && !flox.envActive"
      },
      {
        "view": "floxInstallView",
        "contents": "Find and install a package.\n[Install](command:flox.install)",
        "when": "flox.envExists"
      },
      {
        "view": "floxVarsView",
        "contents": "Add variable(s).\n[Edit manifest.toml](command:flox.edit)",
        "when": "flox.envExists"
      },
      {
        "view": "floxServicesView",
        "contents": "Add services(s).\n[Edit manifest.toml](command:flox.edit)",
        "when": "flox.envExists"
      }
    ],
    "views": {
      "flox": [
        {
          "id": "floxInfoView",
          "name": "Search & Install packages"
        },
        {
          "id": "floxInstallView",
          "name": "Installed Packages",
          "when": "flox.envExists"
        },
        {
          "id": "floxVarsView",
          "name": "Variables",
          "when": "flox.envExists"
        },
        {
          "id": "floxServicesView",
          "name": "Services",
          "when": "flox.envExists"
        },
        {
          "id": "floxHelpView",
          "type": "webview",
          "name": "Help & Docs"
        }
      ]
    },
    "commands": [
      {
        "command": "flox.init",
        "category": "Flox",
        "title": "Create new environment"
      },
      {
        "command": "flox.version",
        "category": "Flox",
        "title": "Show version"
      },
      {
        "command": "flox.activate",
        "category": "Flox",
        "title": "Activate environment"
      },
      {
        "command": "flox.install",
        "category": "Flox",
        "icon": "$(add)",
        "title": "Install a package"
      },
      {
        "command": "flox.uninstall",
        "category": "Flox",
        "icon": "$(trash)",
        "title": "Uninstall a package"
      },
      {
        "command": "flox.serviceStart",
        "category": "Flox",
        "when": "flox.envActive",
        "icon": "$(run)",
        "title": "Start a service"
      },
      {
        "command": "flox.serviceStop",
        "category": "Flox",
        "when": "flox.envActive",
        "icon": "$(stop)",
        "title": "Stop a service"
      },
      {
        "command": "flox.serviceRestart",
        "category": "Flox",
        "when": "flox.envActive",
        "icon": "$(refresh)",
        "title": "Restart a service"
      },
      {
        "command": "flox.edit",
        "category": "Flox",
        "title": "Edit manifest.toml"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "flox.init",
          "when": "!flox.envExists"
        },
        {
          "command": "flox.version",
          "group": "commandPalette"
        },
        {
          "command": "flox.activate",
          "when": "flox.envExists",
          "group": "commandPalette"
        }
      ],
      "view/title": [
        {
          "command": "flox.init",
          "title": "Create new environment",
          "when": "view == floxInfoView && !flox.envExists"
        },
        {
          "command": "flox.install",
          "title": "Install a package",
          "when": "(view == floxInfoView || view == floxInstallView) && flox.envExists"
        },
        {
          "command": "flox.install",
          "group": "navigation",
          "when": "view == floxInstallView && flox.envExists"
        },
        {
          "command": "flox.uninstall",
          "title": "Uninstall a package",
          "when": "(view == floxInfoView || view == floxInstallView) && flox.envExists && flox.hasPkgs"
        },
        {
          "command": "flox.uninstall",
          "group": "navigation",
          "when": "view == floxInstallView && flox.envExists && flox.hasPkgs"
        },
        {
          "command": "flox.activate",
          "title": "Activate environment",
          "when": "view == floxInfoView && flox.envExists && !flox.envActive"
        },
        {
          "command": "flox.edit",
          "title": "Edit manifest.toml",
          "when": "(view == floxInfoView || view == floxInstallView || view == floxVarsView || view == floxServicesView) && flox.envExists"
        }
      ],
      "view/item/context": [
        {
          "command": "flox.uninstall",
          "group": "inline",
          "when": "view == floxInstallView && viewItem == package"
        },
        {
          "command": "flox.serviceStart",
          "group": "inline",
          "when": "flox.envActive && view == floxServicesView && viewItem == service"
        },
        {
          "command": "flox.serviceStop",
          "group": "inline",
          "when": "flox.envActive && view == floxServicesView && viewItem == service-running"
        },
        {
          "command": "flox.serviceRestart",
          "group": "inline",
          "when": "flox.envActive && view == floxServicesView && viewItem == service-running"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "package": "vsce package --allow-star-activation",
    "compile": "tsc -p ./ && mkdir -p out/assets && cp assets/* out/assets",
    "watch": "mkdir -p out/assets && cp assets/* out/assets && tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.1",
    "eslint": "^9.18.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "smol-toml": "^1.3.1"
  }
}
