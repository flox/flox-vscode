{
  "name": "flox",
  "displayName": "Flox",
  "description": "Flox integration for VSCode editor ",
  "version": "1.0.0",
  "preview": true,
  "icon": "assets/icon.png",
  "author": "Flox <hello@floxdev.com>",
  "maintainers": [
    {
      "name": "Flox team",
      "url": "https://github.com/flox/flox"
    }
  ],
  "publisher": "flox",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/flox/flox-vscode"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "*",
    "onLanguage"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": false,
      "description": "Flox can run arbitrary shell code"
    }
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "flox",
          "title": "Flox",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "views": {
      "flox": [
        {
          "id": "floxInstallView",
          "name": "Search & Install"
        },
        {
          "id": "floxVarsView",
          "name": "Variables"
        },
        {
          "id": "floxServicesView",
          "name": "Services"
        },
        {
          "id": "floxHelpView",
          "name": "Help & Documentation"
        }
      ]
    },
    "commands": [
      {
        "command": "flox.init",
        "title": "Flox: Init - Create an environment in the current directory"
      },
      {
        "command": "flox.version",
        "title": "Flox: Show version"
      },
      {
        "command": "flox.activate",
        "title": "Flox: Activate environment"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "flox.init",
          "when": "flox.environmentExists == false"
        },
        {
          "command": "flox.version",
          "group": "commandPalette"
        },
        {
          "command": "flox.activate",
          "when": "flox.environmentExists == true",
          "group": "commandPalette"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "package": "vsce package --allow-star-activation",
    "compile": "tsc -p ./ && mkdir -p ./out/assets ./out/scripts && cp ./assets/* ./out/assets && cp ./scripts/* ./out/scripts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.1",
    "eslint": "^9.17.0",
    "typescript": "^5.6.3"
  }
}
