{
  "name": "flox",
  "displayName": "Flox",
  "description": "Flox integration for VSCode editor ",
  "version": "1.0.0",
  "icon": "assets/icon.png",
  "author": "Flox <hello@floxdev.com>",
  "maintainers": [
    {
      "name": "Flox team",
      "url": "https://github.com/flox/flox"
    }
  ],
  "publisher": "flox",
  "license": "MIT",
  "pricing": "Free",
  "repository": {
    "type": "git",
    "url": "https://github.com/flox/flox-vscode"
  },
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "extensionKind": [
    "workspace"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "*",
    "onLanguage"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": false,
      "description": "Flox can run arbitrary shell code"
    }
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "flox",
          "title": "Flox",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "floxInfoView",
        "contents": "Flox is not installed.\n\nFlox is a virtual environment and package manager that helps you manage dependencies.\n\n[Install Flox](command:flox.openInstallPage)",
        "when": "!flox.isInstalled"
      },
      {
        "view": "floxInfoView",
        "contents": "Welcome to Flox! We couldn't find any Flox environment.\n[Create environment](command:flox.init)",
        "when": "flox.isInstalled && !flox.envExists"
      },
      {
        "view": "floxInfoView",
        "contents": "[Activate & Restart](command:flox.activate)",
        "when": "flox.isInstalled && flox.envExists && !flox.envActive"
      },
      {
        "view": "floxInfoView",
        "contents": "[Deactivate & Restart](command:flox.deactivate)",
        "when": "flox.isInstalled && flox.envExists && flox.envActive"
      },
      {
        "view": "floxInfoView",
        "contents": "Your environment is active!",
        "when": "flox.isInstalled && flox.envActive"
      },
      {
        "view": "floxInfoView",
        "contents": "Find and install a package.\n[Install a package](command:flox.install)",
        "when": "flox.isInstalled && flox.envExists"
      },
      {
        "view": "floxInfoView",
        "contents": "Don't be a stranger, [say hi](https://go.flox.dev/slack)!",
        "when": "flox.isInstalled && !flox.envActive"
      },
      {
        "view": "floxVarsView",
        "contents": "Add variable(s).\n[Edit manifest.toml](command:flox.edit)",
        "when": "flox.isInstalled && flox.envExists"
      },
      {
        "view": "floxServicesView",
        "contents": "Add services(s).\n[Edit manifest.toml](command:flox.edit)",
        "when": "flox.isInstalled && flox.envExists"
      },
      {
        "view": "floxInfoView",
        "contents": "Enhance AI coding with Flox Agentic integration.\n\n[Configure MCP Server](command:flox.configureMcp)",
        "when": "flox.isInstalled && flox.envActive && flox.copilotInstalled && flox.mcpAvailable"
      }
    ],
    "mcpServerDefinitionProviders": [
      {
        "id": "floxMcp",
        "label": "Flox MCP Server"
      }
    ],
    "views": {
      "flox": [
        {
          "id": "floxInfoView",
          "name": "Search & Install packages"
        },
        {
          "id": "floxInstallView",
          "name": "Installed Packages",
          "when": "flox.isInstalled && flox.envExists"
        },
        {
          "id": "floxVarsView",
          "name": "Variables",
          "when": "flox.isInstalled && flox.envExists"
        },
        {
          "id": "floxServicesView",
          "name": "Services",
          "when": "flox.isInstalled && flox.envExists"
        }
      ]
    },
    "commands": [
      {
        "command": "flox.openInstallPage",
        "category": "Flox",
        "title": "Install Flox"
      },
      {
        "command": "flox.openUpgradePage",
        "category": "Flox",
        "title": "Upgrade Flox"
      },
      {
        "command": "flox.init",
        "category": "Flox",
        "title": "Create new environment"
      },
      {
        "command": "flox.version",
        "category": "Flox",
        "title": "Show version"
      },
      {
        "command": "flox.activate",
        "category": "Flox",
        "title": "Activate environment"
      },
      {
        "command": "flox.deactivate",
        "category": "Flox",
        "title": "Deactivate environment"
      },
      {
        "command": "flox.install",
        "category": "Flox",
        "icon": "$(add)",
        "title": "Install a package"
      },
      {
        "command": "flox.uninstall",
        "category": "Flox",
        "icon": "$(trash)",
        "title": "Uninstall a package"
      },
      {
        "command": "flox.serviceStart",
        "category": "Flox",
        "when": "flox.envActive",
        "icon": "$(run)",
        "title": "Start a service"
      },
      {
        "command": "flox.serviceStop",
        "category": "Flox",
        "when": "flox.envActive",
        "icon": "$(stop)",
        "title": "Stop a service"
      },
      {
        "command": "flox.serviceRestart",
        "category": "Flox",
        "when": "flox.envActive",
        "icon": "$(refresh)",
        "title": "Restart a service"
      },
      {
        "command": "flox.serviceLogs",
        "category": "Flox",
        "when": "flox.envActive",
        "icon": "$(output)",
        "title": "Show service logs"
      },
      {
        "command": "flox.edit",
        "category": "Flox",
        "title": "Edit manifest.toml"
      },
      {
        "command": "flox.search",
        "category": "Flox",
        "title": "Search packages"
      },
      {
        "command": "flox.configureMcp",
        "category": "Flox",
        "title": "Configure Flox Agentic MCP Server"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "flox.openInstallPage",
          "when": "!flox.isInstalled"
        },
        {
          "command": "flox.init",
          "when": "flox.isInstalled && !flox.envExists"
        },
        {
          "command": "flox.version",
          "when": "flox.isInstalled",
          "group": "commandPalette"
        },
        {
          "command": "flox.activate",
          "when": "flox.isInstalled && flox.envExists",
          "group": "commandPalette"
        },
        {
          "command": "flox.serviceLogs",
          "when": "flox.envActive && flox.hasServices"
        }
      ],
      "view/title": [
        {
          "command": "flox.init",
          "title": "Create new environment",
          "when": "view == floxInfoView && flox.isInstalled && !flox.envExists"
        },
        {
          "command": "flox.install",
          "title": "Install a package",
          "when": "(view == floxInfoView || view == floxInstallView) && flox.envExists"
        },
        {
          "command": "flox.install",
          "group": "navigation",
          "when": "view == floxInstallView && flox.envExists"
        },
        {
          "command": "flox.uninstall",
          "title": "Uninstall a package",
          "when": "(view == floxInfoView || view == floxInstallView) && flox.envExists && flox.hasPkgs"
        },
        {
          "command": "flox.uninstall",
          "group": "navigation",
          "when": "view == floxInstallView && flox.envExists && flox.hasPkgs"
        },
        {
          "command": "flox.activate",
          "title": "Activate environment",
          "when": "view == floxInfoView && flox.envExists && !flox.envActive"
        },
        {
          "command": "flox.edit",
          "title": "Edit manifest.toml",
          "when": "(view == floxInfoView || view == floxInstallView || view == floxVarsView || view == floxServicesView) && flox.envExists"
        }
      ],
      "view/item/context": [
        {
          "command": "flox.uninstall",
          "group": "inline",
          "when": "view == floxInstallView && viewItem == package"
        },
        {
          "command": "flox.serviceStart",
          "group": "inline",
          "when": "flox.envActive && view == floxServicesView && viewItem == service"
        },
        {
          "command": "flox.serviceStop",
          "group": "inline",
          "when": "flox.envActive && view == floxServicesView && viewItem == service-running"
        },
        {
          "command": "flox.serviceRestart",
          "group": "inline",
          "when": "flox.envActive && view == floxServicesView && viewItem == service-running"
        },
        {
          "command": "flox.serviceLogs",
          "group": "inline",
          "when": "flox.envActive && view == floxServicesView && viewItem == service-running"
        }
      ]
    },
    "configuration": {
      "title": "Flox",
      "properties": {
        "flox.promptToActivate": {
          "type": "boolean",
          "default": true,
          "description": "Show a popup to activate the Flox environment when one is detected in the workspace."
        },
        "flox.checkForUpdates": {
          "type": "boolean",
          "default": true,
          "description": "Periodically check for newer versions of Flox and show a notification when an update is available."
        }
      }
    }
  },
  "vsce": {
    "allowStarActivation": true
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "package": "vsce package --allow-star-activation",
    "compile": "npm run clean && tsc -p ./ ",
    "watch": "npm run clean && tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:unit": "vscode-test --label unit",
    "test:integration": "vscode-test --label integration",
    "clean": "rm -rf ./out"
  },
  "devDependencies": {
    "@types/node": "25.x",
    "@types/vscode": "*",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^9.39.2",
    "ovsx": "^0.10.7",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "smol-toml": "^1.6.0"
  }
}
